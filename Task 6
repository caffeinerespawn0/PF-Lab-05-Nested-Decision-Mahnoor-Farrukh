#include<stdio.h>
int main(){
    char room,action; 
printf("Which room do you want to control?Living room(L) or Kitchen (K) \n");
scanf(" %c",&room);
if(room=='L' || room=='l'){
    printf("Do you want to control Lights (L) or Thermostat (T)");
    scanf(" %c",&action);
    if(action=='L' || action=='l'){
        printf("Adjusting ambient lighting\n");
    }
    else if(action=='T'||action=='t'){
        printf("Setting living room temperature\n");
    }
    else{
        printf("Enter a valid character\n");
    }
}
if(room=='K'||room=='k'){
    printf("Do you want to control Lights (L) or Thermostat (T)");
    scanf(" %c",&action);
    if(action=='L'||action=='l'){
        printf("Turning on bright task lighting\n");
    }
    else if(action=='T'||action=='t'){
        printf("Setting kitchen temperature.\n");
    }
    else{
        printf("Enter a valid character \n");
    }
}
return 0; 
}
